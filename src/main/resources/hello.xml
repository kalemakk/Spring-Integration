<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:integration="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">


    <integration:gateway service-interface="com.example.springintegration.PrintGateWay"
                         default-request-channel="inputChannel"/>

    <integration:channel id="inputChannel"/>
    <integration:channel id="numericChannel"/>
    <integration:channel id="stringChannel"/>

    <integration:channel id="defaultChannel"/>



    <bean class="com.example.springintegration.CustomRouter" id="customRouter"/>

    <integration:router input-channel="inputChannel" ref="customRouter"/>


    <bean class="com.example.springintegration.NumericPrint" id="numericPrintService"/>
    <bean class="com.example.springintegration.PrintService" id="printService"/>
    <bean class="com.example.springintegration.Default" id="defaultService"/>


    <integration:service-activator ref="numericPrintService"
                                   method="print"
                                   input-channel="numericChannel">
    </integration:service-activator>

    <integration:service-activator ref="printService"
                                   method="print"
                                   input-channel="stringChannel">
    </integration:service-activator>

    <integration:service-activator ref="defaultService" input-channel="defaultChannel" method="print">

    </integration:service-activator>

</beans>
